{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es5",
    "inlineSourceMap": true,
    "inlineSources": true    
  },
  "include": [
    "src/lib/index.ts"
  ]
}